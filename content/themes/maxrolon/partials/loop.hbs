{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<article class="{{post_class}}">
  <a href="{{url}}">
    <header class="post-header">
        <div class="thumbnail" style="background-image:url({{{image}}})">
          <img src="{{{image}}}" style="visibility:hidden;width:1px">
        </div>
    </header>
    <section class="post-excerpt">
        <time class="post-date" datetime="{{date format='M-YYYY'}}">{{date format="M.YYYY"}}</time>
         <p class="bold">{{title}}</p>
        <p>{{excerpt characters="140"}}..</p>
    </section>
  </a>
  <footer class="post-meta">
      <a href="http://www.facebook.com/sharer.php?u=http://maxrolon.com{{url}}" target="_blank">Like.</a>
      <a href="http://twitter.com/share?url=http://maxrolon.com{{url}}" target="_blank">Tweet.</a>
      <span><i class="icon-tag"></i> {{tags}}</span>
  </footer>
</article>

{{/foreach}}

